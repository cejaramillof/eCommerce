.card.large-padding.big-padding.big-top-space
  %table.table.table-striped.table-hover.medium#table_shopping_cart
    %thead
      %td Producto
      %td Costo
      %td Acciones
    %tbody
      -@shopping_cart.in_shopping_carts.each do |i_sh|
        -product = i_sh.product
        %tr{id: "#{product.id}"}
          %td= product.name
          %td= product.pricing
          %td= link_to "Eliminar",i_sh,method: :delete
  .top-space.large-padding.text-left
    %p.medium(product_id)
      %strong
        Total: $
        =@shopping_cart.total
  .top-space
    =render "payments/buttons"