<div class="col-xs-12 col-md-10 center-block no-float">
  <div class="card big-padding">
    <h2>Editar <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field top-space">
        <%= f.label :email, "Correo" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field top-space">
        <%= f.label :password, "Contraseña" %> <i>(Dejar en blanco si no quieres cambiarla)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", class: "form-control", placeholder: "*******" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caracteres minimo</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "*******" %>
      </div>

      <div class="field top-space">
        <%= f.label :current_password, "Contraseña actual" %> <i>(Necesitas tu password actual para confirmar cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", class: "form-control", placeholder: "*******" %>
      </div>

      <div class="actions text-right top-space">
        <%= f.submit "Actualizar", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>